{
  "name": "ffmpeg",
  "cleanup": [ "/include", "/lib/pkgconfig", "/share" ],
  "build-options" : {
    "arch" : {
      "i386" : {
        "config-opts" : [
          "--arch=x86"
        ]
      },
      "arm" : {
        "config-opts" : [
          "--arch=arm"
        ]
      }
    }
  },
  "config-opts": [
    "--disable-all",
    "--enable-shared",
    "--disable-static",
    "--enable-gnutls",
    "--enable-avfilter",
    "--enable-avcodec",
    "--enable-avformat",
    "--enable-swscale",
    "--enable-hwaccels",
    "--enable-decoder=h264",
    "--enable-decoder=aac"
  ],
  "sources": [{
    "type": "archive",
    "url": "https://ffmpeg.org/releases/ffmpeg-3.3.5.tar.xz",
    "sha256": "a893490c3a8a7caaa9c47373b789c0335d0ac3572f2ba61059de842b9e45d802"
  }]
}
