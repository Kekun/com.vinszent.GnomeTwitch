{
  "name": "ffmpeg",
  "cleanup": [ "/include", "/lib/pkgconfig", "/share" ],
  "build-options" : {
    "arch" : {
      "i386" : {
        "config-opts" : [
          "--arch=x86"
        ]
      },
      "arm" : {
        "config-opts" : [
          "--arch=arm"
        ]
      }
    }
  },
  "config-opts": [
    "--disable-all",
    "--enable-shared",
    "--disable-static",
    "--enable-gnutls",
    "--enable-avfilter",
    "--enable-avcodec",
    "--enable-avformat",
    "--enable-swscale",
    "--enable-hwaccels",
    "--enable-decoder=h264",
    "--enable-decoder=aac"
  ],
  "sources": [{
    "type": "archive",
    "url": "https://ffmpeg.org/releases/ffmpeg-3.4.1.tar.xz",
    "sha256": "5a77278a63741efa74e26bf197b9bb09ac6381b9757391b922407210f0f991c0"
  }]
}
